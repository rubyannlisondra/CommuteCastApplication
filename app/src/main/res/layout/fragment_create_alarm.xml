<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".CreateAlarm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintBottom_toTopOf="@+id/seekBar1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="59dp"
            android:layout_height="67dp"
            android:backgroundTint="#1A1A1A"
            android:contentDescription="Menu Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/volumeUp"
            app:layout_constraintVertical_bias="0.093"
            app:srcCompat="@drawable/baseline_add_alert_24"
            app:tint="#D4D4D4" />

        <ImageView
            android:id="@+id/volumeUp"
            android:layout_width="59dp"
            android:layout_height="67dp"
            android:backgroundTint="#1A1A1A"
            android:contentDescription="Menu Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.068"
            app:srcCompat="@drawable/baseline_volume_up_24"
            app:tint="#D4D4D4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="106dp"
            android:layout_height="23dp"
            android:fontFamily="@font/dm_sans"
            android:padding="2dp"
            android:text="ALARM MODE"
            android:textColor="#D2D2D2"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.076" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="269dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#1A1A1A"
            app:layout_constraintBottom_toTopOf="@+id/alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/volumeUp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            android:max="100"/>

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="269dp"
            android:layout_height="30dp"
            android:layout_marginTop="88dp"
            android:backgroundTint="#1A1A1A"
            android:max="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/alarm"
            app:layout_constraintTop_toBottomOf="@+id/seekBar1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>